{
  "name": "litigation-management-system",
  "version": "1.0.0",
  "description": "Professional litigation management web application with React frontend and PHP backend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "playwright test tests/auth.spec.ts",
    "test:e2e:rtl": "playwright test tests/rtl-mixed-content.spec.ts",
    "test:e2e:accessibility": "playwright test tests/accessibility.spec.ts",
    "test:e2e:visual": "playwright test tests/visual-regression.spec.ts",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:performance": "playwright test --grep \"performance\"",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:e2e:setup": "chmod +x scripts/setup-tests.sh && ./scripts/setup-tests.sh --full-setup",
    "test:e2e:setup:quick": "chmod +x scripts/setup-tests.sh && ./scripts/setup-tests.sh --quick-setup",
    "test:e2e:setup:ci": "chmod +x scripts/setup-tests.sh && ./scripts/setup-tests.sh --ci-setup",
    "test:e2e:run": "chmod +x scripts/run-tests.sh && ./scripts/run-tests.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:rtl": "storybook dev -p 6006 --config-dir .storybook-rtl",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss,html}\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully",
    "start:backend": "php -S localhost:8000 -t public",
    "build:production": "scripts\\build-production.bat",
    "deploy:godaddy": "echo Please configure FTP credentials in scripts/deploy-to-godaddy.sh and run manually",
    "setup": "npm install && npx playwright install"
  },
  "keywords": [
    "litigation",
    "legal",
    "case-management",
    "react",
    "typescript",
    "vite",
    "rtl",
    "arabic",
    "accessibility"
  ],
  "author": "Law Firm Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/addon-a11y": "^7.6.6",
    "@storybook/addon-docs": "^7.6.6",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.7",
    "storybook": "^7.6.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-bootstrap": "^2.9.2",
    "bootstrap": "^5.3.2",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "react-query": "^3.39.3",
    "axios": "^1.6.2",
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.16",
    "react-hot-toast": "^2.4.1",
    "react-select": "^5.8.0",
    "react-datepicker": "^4.25.0",
    "react-table": "^7.8.0",
    "@types/react-table": "^7.7.18",
    "react-dropzone": "^14.2.3",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "date-fns": "^3.0.6",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/litigation-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/litigation-management-system/issues"
  },
  "homepage": "https://lit.sarieldin.com"
}