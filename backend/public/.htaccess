RewriteEngine On

############################
# 1) API passthrough
############################
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

############################
# 2) Serve existing files
############################
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]

############################
# 3) SPA fallback (Root-domain)
############################
RewriteRule . index.html [L]